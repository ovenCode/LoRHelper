<Window x:Class="desktop.AdventureSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:desktop"
        mc:Ignorable="d"
        Title="AdventureSetup" Height="500" Width="400">
    <Grid Background="#FFFFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.08*" />
            <RowDefinition Height="0.92*" />
        </Grid.RowDefinitions>
        <Grid x:Name="tabButtonsGrid" Grid.Row="0" VerticalAlignment="Top" Height="40" Background="#FF000000">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="PowersTabBtn" Click="PowersTabBtn_Click" Content="Powers" VerticalAlignment="Top"/>
                <Button x:Name="ItemsTabBtn" Click="ItemsTabBtn_Click" Content="Items" VerticalAlignment="Top"/>
                <Button x:Name="RelicsTabBtn" Click="RelicsTabBtn_Click" Content="Relics" VerticalAlignment="Top"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="displayGrid" Grid.Row="1" Background="#FF8B5911">
            <ScrollViewer Visibility="Visible">
                <StackPanel>
                    <ScrollViewer x:Name="PowersSV" Height="150" Margin="0,0,0,10">
                        <StackPanel x:Name="PowersSP">

                        </StackPanel>
                    </ScrollViewer>
                    <TextBox x:Name="PowersTB" Style="{StaticResource SearchBox}"  Width="300" TextChanged="PowersTB_TextChanged"/>
                    <ScrollViewer x:Name="AllPowersSV" Height="150" Margin="0,10,0,0" HorizontalAlignment="Center" HorizontalContentAlignment="Center">
                        <Grid x:Name="AllPowersGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
            <ScrollViewer Visibility="Collapsed">
                <StackPanel>
                    <TextBox x:Name="DeckTB" Style="{StaticResource SearchBox}" Width="250" Height="30" Margin="0,50"/>
                    <ScrollViewer x:Name="DeckSV" Height="150" Margin="0,10" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" PreviewMouseWheel="DeckSV_PreviewMouseWheel">
                        <ListBox x:Name="DeckLB" Background="Transparent" BorderBrush="Transparent" />
                    </ScrollViewer>
                    <Label Content="Wybrana karta"/>
                    <Label x:Name="ChosenCardLBL" Content="Nazwa wybranej karty" />
                    <ScrollViewer Height="100">
                        <StackPanel x:Name="AddedItemsSP" />
                    </ScrollViewer>
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton x:Name="ItemsCommonBtn" Style="{StaticResource FilterToggleBtn}" Checked="ItemsCommonBtn_Checked" Unchecked="ItemsCommonBtn_Unchecked" Content="Zwykłe" VerticalAlignment="Top"/>
                        <ToggleButton x:Name="ItemsRareBtn" Style="{StaticResource FilterToggleBtn}"  Checked="ItemsRareBtn_Checked" Unchecked="ItemsRareBtn_Unchecked" Content="Rzadkie" VerticalAlignment="Top"/>
                        <ToggleButton x:Name="ItemsEpicBtn" Style="{StaticResource FilterToggleBtn}" Checked="ItemsEpicBtn_Checked" Unchecked="ItemsEpicBtn_Unchecked" Content="Epickie" VerticalAlignment="Top"/>
                    </StackPanel>
                    <TextBox x:Name="ItemsFilterTB" Style="{StaticResource SearchBox}" Width="250" Height="30" Margin="0,50" TextChanged="ItemsFilterTB_TextChanged" />
                    <ScrollViewer Height="150">
                        <Grid x:Name="AllItemsGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
            <ScrollViewer Visibility="Collapsed">
                <StackPanel>
                    <TextBox x:Name="DeckTB2" Style="{StaticResource SearchBox}" Width="250" Height="30" Margin="0,50" />
                    <ScrollViewer x:Name="DeckSV2" Height="150" Margin="0,10" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" PreviewMouseWheel="DeckSV_PreviewMouseWheel">
                        <ListBox x:Name="DeckLB2" Background="Transparent" BorderBrush="Transparent" />
                    </ScrollViewer>
                    <Label Content="Wybrana karta"/>
                    <Label x:Name="ChosenCardLBL2" Content="Nazwa wybranej karty" />
                    <ScrollViewer Height="100">
                        <StackPanel x:Name="AddedRelicsSP" />
                    </ScrollViewer>
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton x:Name="RelicsCommonBtn" Style="{StaticResource FilterToggleBtn}" Checked="RelicsCommonBtn_Checked" Unchecked="RelicsCommonBtn_Unchecked" Content="Zwykłe" VerticalAlignment="Top"/>
                        <ToggleButton x:Name="RelicsRareBtn" Style="{StaticResource FilterToggleBtn}"  Checked="RelicsRareBtn_Checked" Unchecked="RelicsRareBtn_Unchecked" Content="Rzadkie" VerticalAlignment="Top"/>
                        <ToggleButton x:Name="RelicsEpicBtn" Style="{StaticResource FilterToggleBtn}" Checked="RelicsEpicBtn_Checked" Unchecked="RelicsEpicBtn_Unchecked" Content="Epickie" VerticalAlignment="Top"/>
                    </StackPanel>
                    <TextBox x:Name="RelicsFilterTB" Style="{StaticResource SearchBox}" Width="250" Height="30" Margin="0,50" TextChanged="RelicsFilterTB_TextChanged" />
                    <ScrollViewer Height="150">
                        <Grid x:Name="AllRelicsGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
